{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "preserve",
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@fledgely/contracts": ["../../packages/shared/src/contracts/index.ts"],
      "@fledgely/firestore": ["../../packages/shared/src/firestore/index.ts"],
      "@fledgely/shared": ["../../packages/shared/src/index.ts"],
      "@fledgely/test-utils": ["../../packages/test-utils/src/index.ts"]
    },
    "noEmit": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
