{
  "manifest_version": 3,
  "name": "Fledgely",
  "version": "0.0.1",
  "description": "Family digital safety and trust building",
  "permissions": ["storage", "alarms"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fledgely - Not Connected"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
