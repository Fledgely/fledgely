{
  "name": "@fledgely/shared",
  "version": "0.0.1",
  "description": "Shared constants, utilities, and crisis allowlist for Fledgely",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "private": true,
  "scripts": {
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:allowlist": "vitest run src/testing",
    "test:allowlist:presence": "vitest run src/testing/__tests__/allowlistPresence.test.ts",
    "test:allowlist:zero-data-path": "vitest run src/testing/__tests__/zeroDataPath.test.ts",
    "test:allowlist:fuzzy": "vitest run src/testing/__tests__/fuzzyMatching.test.ts",
    "test:allowlist:fallback": "vitest run src/testing/__tests__/fallbackChain.test.ts",
    "test:allowlist:e2e": "vitest run src/testing/__tests__/allowlistE2E.integration.test.ts",
    "test:allowlist:report": "vitest run src/testing --reporter=json --outputFile=../../reports/allowlist-tests.json",
    "build": "tsc",
    "generate:allowlist": "npx tsx scripts/export-allowlist.ts",
    "export:allowlist": "npm run generate:allowlist"
  },
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./constants/crisis-urls": {
      "import": "./src/constants/crisis-urls/index.ts",
      "types": "./src/constants/crisis-urls/index.ts"
    },
    "./testing": {
      "import": "./src/testing/index.ts",
      "types": "./src/testing/index.ts"
    }
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vitest": "^2.1.0",
    "tsx": "^4.7.0"
  }
}
