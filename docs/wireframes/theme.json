{
  "name": "Fledgely Low-Fi Wireframes",
  "version": "1.0.0",
  "description": "Low-fidelity wireframe theme based on Fledgely UX Design Specification",

  "wireframe": {
    "background": "#ffffff",
    "container": "#f5f5f5",
    "border": "#9e9e9e",
    "text": "#424242",
    "placeholder": "#9e9e9e",
    "accent": "#d4843e"
  },

  "semantic": {
    "success": "#4ead6b",
    "warning": "#e8a849",
    "error": "#e57373",
    "info": "#64b5f6",
    "crisis": "#5ba3a8"
  },

  "roles": {
    "child": "#8b5cf6",
    "parent": "#c2855a",
    "caregiver": "#78909c"
  },

  "trust": {
    "seedling": "#a5d6a7",
    "growing": "#81c784",
    "mature": "#66bb6a",
    "graduated": "#4caf50"
  },

  "platforms": {
    "mobile": {
      "width": 375,
      "height": 812,
      "navHeight": 83,
      "statusBarHeight": 44
    },
    "desktop": {
      "width": 1440,
      "height": 900,
      "sidebarWidth": 280
    },
    "tablet": {
      "width": 1024,
      "height": 768,
      "navHeight": 64
    },
    "firetv": {
      "width": 1920,
      "height": 1080,
      "safeAreaPadding": 48
    }
  },

  "typography": {
    "heading": { "fontSize": 24, "fontWeight": "bold" },
    "subheading": { "fontSize": 18, "fontWeight": "semibold" },
    "body": { "fontSize": 16, "fontWeight": "normal" },
    "caption": { "fontSize": 14, "fontWeight": "normal" },
    "label": { "fontSize": 12, "fontWeight": "medium" }
  },

  "spacing": {
    "xs": 4,
    "sm": 8,
    "md": 16,
    "lg": 24,
    "xl": 32,
    "xxl": 48
  },

  "touchTargets": {
    "minimum": 44,
    "comfortable": 48,
    "childFriendly": 56,
    "elderly": 60
  }
}
